<?xml version="1.0" encoding="UTF-8"?>
<Context reloadable="true">
	<Resource	name="jdbc/activitasDB" 
				auth="Container" 
				type="javax.sql.DataSource"
				maxActive="100" 
				maxIdle="30" 
				maxWait="10000"
				username="activitas" 
				password="activitas" 
				driverClassName="com.mysql.jdbc.Driver"
				url="jdbc:mysql://localhost:3306/activitas?autoReconnect=true"/>
				
	<Resource
		name="mail/Session"
		auth="Container"
		type="javax.mail.Session"
		mail.smtp.host="mail.servidor.com.br"
		mail.smtp.port="25"
		mail.smtp.auth="true"
		mail.smtp.user="teste@servidor.com.br"
		mail.smtp.password="teste"/>

</Context>